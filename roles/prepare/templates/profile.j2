# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

export GOROOT=/usr/local/go
export GOPATH=$HOME/go
export GO111MODULE=on
export PATH=$PATH:/usr/local/go/bin:$HOME/go/bin

alias status='ag0 status -n tcp://localhost:{{ custom_port_prefix }}657 | jq .'
alias wstatus='watch -n 1 "ag0 status -n tcp://localhost:{{ custom_port_prefix }}657 | jq ."'
alias peers='curl -s http://localhost:{{ custom_port_prefix }}657/net_info | jq .result.n_peers'
alias wpeers='watch -n 1 "curl http://localhost:{{ custom_port_prefix }}657/net_info | jq .result.n_peers"'